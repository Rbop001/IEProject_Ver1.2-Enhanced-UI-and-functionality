@model dynamic
@{
    ViewBag.Title = "POI List";
}

<section class="banner1">
</section>

<section>
    <div class="container py-4 mt-2">
        <h2 class="tittle text-center mb-3">@Model.Category.CategoryName POIs</h2>
        <div class="row mt-md-4">
            <div class="col-12">
                <table id="poi" class="table table-striped table-bordered" width="100%">
                    <thead>
                        <tr>
                            <th>Place Name</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.POIs)
                        {
                            <tr>
                                <td>
                                    <div class="lead"><b>@item.Name</b></div>
                                    <div>
                                        @item.POIType
                                    </div>
                                    <div>
                                        <small>@item.SubType</small>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("POIDetails", "ExploreMelbourne", new { id = @item.Id })" class="blog-btn ">View Details</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</section>
@section scripts{
    <script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery('#poi').DataTable();
        });
    </script>
}
